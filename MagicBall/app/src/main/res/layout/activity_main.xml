<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:text="@string/phrase_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phraseTextView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" android:textAllCaps="false" android:gravity="center" android:padding="8dp"
            android:textColor="@android:color/holo_blue_dark"/>
    <Button
            android:text="@string/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pressMeButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phraseTextView" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" android:textStyle="bold" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>